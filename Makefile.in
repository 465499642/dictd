ifneq (,)
This makefile requires GNU Make.
endif

.SUFFIXES:	

srcdir=		@srcdir@
VPATH=		@srcdir@
prefix=		@prefix@
subdirs=        @subdirs@ zlib
exec_prefix=	@exec_prefix@
man1_prefix=	$(prefix)/man/man1

SHELL=		/bin/sh

CC=		@CC@
CPP=		@CPP@
RANLIB=		@RANLIB@
INSTALL=	@INSTALL@
INSTALL_PROGRAM=@INSTALL_PROGRAM@
INSTALL_DATA=	@INSTALL_DATA@
LEX=		@LEX@
LEXLIB= 	@LEXLIB@
YACC=		@YACC@

CFLAGS=		@CFLAGS@
LDFLAGS=        @LDFLAGS@
XTRACFLAGS=     @WCFLAGS@ @XTRACFLAGS@ @DEFS@ @CPPFLAGS@ -I. -Ilibmaa -Izlib
XTRALDFLAGS=    @WLDFLAGS@ @XTRALDFLAGS@ -Llibmaa -Lzlib
LDLIBS=		@LIBS@ -lmaa -lz

HEADERS= 	./config.h @XTRAHEADERS@ dict.h
EXES=	 	search dictzip # jargdump wndump # dictzip
OBJS=           fmt.o

all::
	@for subdir in $(subdirs); do \
		echo making in $$subdir; \
		(cd $$subdir && $(MAKE)) || exit 1; \
	done

all:: dictd

#all:: $(EXES)

%.o: %.c
	$(CC) -c $(XTRACFLAGS) $(CFLAGS) $<

#%: %.o
#	$(CC) $(XTRALDFLAGS) $(LDFLAGS) -o $@ $< $(LDLIBS)

ALLFLAGS=$(XTRACFLAGS) $(CFLAGS) $(XTRALDFLAGS) $(LDFLAGS)
%: %.c
	$(CC) $(ALLFLAGS) -o $@ $< $(OBJS) $(LDLIBS)

$(EXES):  $(HEADERS) $(OBJS) libmaa/libmaa.a zlib/libz.a
$(OBJS):  $(HEADERS)

wordnet.dct wordnet.idx: wndump data/wordnet/data.*
	./wndump < data/wordnet/data.*

jargon.dct jargon.idx: jargdump data/jarg400.txt
	./jargdump < data/jarg400.txt

dictd: dictd.c net.o servscan.o servparse.o index.o data.o daemon.o $(HEADERS)
	$(CC) $(ALLFLAGS) -o $@ $< net.o servscan.o servparse.o index.o data.o  daemon.o $(LDLIBS)

dictzip: dictzip.c data.o $(HEADERS)
	$(CC) $(ALLFLAGS) -o $@ $< data.o $(LDLIBS)

servscan.c: servscan.l
	$(LEX) -b -p -p $(LFLAGS) -o$@ $<

servscan.o: servscan.c servparse.o servparse.h $(HEADERS)
	$(CC) -c $(XTRACFLAGS) $(CFLAGS) -Wno-unused $<

servparse.c: servparse.y
	$(YACC) -tdv $<
	cmp -s y.tab.h servparse.h || mv y.tab.h servparse.h
	cmp -s y.tab.c servparse.c || mv y.tab.c servparse.c
	-rm -f y.tab.h y.tab.c

servparse.o: servparse.c $(HEADERS)
	$(CC) -c $(XTRACFLAGS) $(CFLAGS) -Wno-implicit $<


.PHONY: clean distclean tags
clean:
	-rm -f *.o *.s *~ core a.out config.log $(EXES) $(TMPS)
	-rm -f *.log *.aux *.toc *.dvi *.ps
	-rm -f *.cfg *.dtk .inslog tca.map
	-rm -f *.dct *.idx

recursive-clean: clean
	@for subdir in $(subdirs); do \
		echo making clean in $$subdir; \
		(cd $$subdir && $(MAKE) clean) || exit 1; \
	done

distclean: clean
	@for subdir in $(subdirs); do \
		echo making $@ in $$subdir; \
		(cd $$subdir && $(MAKE) $@) || exit 1; \
	done
	-rm -f config.h config.cache config.status stamp-h.in stamp-h
	-rm -f configure Makefile

tags:
	etags *.[ch]


# The following is based on the "Automatic Remaking" node in the GNU
# Autoconf documentation:

$(srcdir)/configure: configure.in
	cd $(srcdir) && autoconf

# autoheader might not change config.h.in, so touch a stamp file.
${srcdir}/config.h.in: stamp-h.in
${srcdir}/stamp-h.in: configure.in
	cd ${srcdir} && autoheader
	date > ${srcdir}/stamp-h.in

config.h: stamp-h
stamp-h: config.h.in config.status
	./config.status

Makefile: Makefile.in config.status
	./config.status

config.status: configure
	./config.status --recheck

